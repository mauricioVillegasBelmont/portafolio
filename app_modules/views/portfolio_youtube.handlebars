<script>
  const videoId ='{{id}}';
  const frameId ='player';

  class Player {
      constructor(frameId, videoId) {
        this.frameId = frameId;
        this.videoId = videoId;
      }
      init() {
        const self = this;
        this.player = new YT.Player(self.frameId, {
          height: '360',
          width: '640',
          videoId: self.videoId,
          events: {
            'onReady': self.onPlayerReady,
          }
        });
      }
      onPlayerReady(event) {
        event.target.playVideo();
      }
    }

    const player = new Player(frameId, videoId);
    function onYouTubeIframeAPIReady() {
      player.init();
    }

</script>
